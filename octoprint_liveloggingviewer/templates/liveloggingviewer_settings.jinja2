<form class="form-horizontal">

    <div class="control-group">
        <label class="control-label">Enabled</label>
        <div class="controls">
		<div class="input-append">
			<input type="checkbox" class="input-block-level" data-bind="checked: settings.plugins.liveloggingviewer.enabled" />
		</div>
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Log Level</label>
        <div class="controls">
            <div class="input-append">
                <select data-bind="value: settings.plugins.liveloggingviewer.level" >
                    <option>DEBUG</option>
                    <option>INFO</option>
                    <option>WARN</option>
                    <option>ERROR</option>
                </select>
            </div>
        </div>
    </div>

    <div class="control-group col-xs-4">
        <label class="control-label">Log Name</label>
        <div class="controls">
		<div class="input-append">
            <input type="text" data-bind="value: settings.plugins.liveloggingviewer.logName" />
            <span class="help-block">Leave empty for all.</span>
		</div>
        </div>
    </div>
</form>
